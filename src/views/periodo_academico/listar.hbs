<div class="container p-4">
    <div class="row">
        <div class="col-lg-4 ">
            <div class="card">
                <div class="card-body">
                    <form action="agregar" method="post">
                        <div class="form-group">
                            <label for="">agregar periodo</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="periodo" id="periodo"
                                placeholder="periodo academico">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block"> agregar</button>

                        </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <h1 class="text-center">listar periodos academicos</h1>
            <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">periodo</th>
                        <th scope="col">
                            <center>accion</center>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each periodo}}
                    <tr>
                        <td scope="row">{{id_periodo}}</td>
                        <td>{{periodo}}</td>
                        <td>
                            <center>
                                <a href="" class="btn btn-danger">eliminar</a>
                                <a href="" class="btn btn-info">modificar</a>
                            </center>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>