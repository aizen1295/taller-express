<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">listar notas</h1>
            <a class="btn btn-primary" href="agregar" role="button">agregar</a>
            <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">estudiantes</th>
                        <th scope="col">docentes</th>
                        <th scope="col">materias</th>
                        <th scope="col">periodos</th>
                        <th scope="col">notas</th>
                        <th scope="col">
                            <center>accion</center>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each nota}}
                    <tr>
                        <td scope="row">{{id_nota}}</td>
                        <td>{{estudiante}}</td>
                        <td>{{docente}}</td>
                        <td>{{materia}}</td>
                        <td>{{periodo}}</td>
                        <td>{{nota}}</td>
                        <td class="text-center">

                            <a href="" class="btn btn-danger">eliminar</a>
                            <a href="" class="btn btn-info">modificar</a>


                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>