<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">lista de Docentes</h1>
            <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                <a class="btn btn-primary" href="agregar" role="button">agregar</a>
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">nombre</th>
                        <th scope="col">edad</th>
                        <th scope="col">correo</th>
                        <th scope="col">
                            <center>accion</center>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each docente}}
                    <tr>
                        <td scope="row">{{id_docente}}</td>
                        <td>{{nombre}}</td>
                        <td>{{edad}}</td>
                        <td>{{correo}}</td>
                        <td>
                            <center>
                                <a href="" class="btn btn-danger">eliminar</a>
                                <a href="" class="btn btn-info">modificar</a>
                            </center>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>