<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">asignar docentes</h1>
            <a class="btn btn-primary" href="agregar" role="button">agregar</a>
            <table id="tabla" class="table table-striped table-bordered" style="width:100%">
                <thead class="text-center">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">docentes</th>
                        <th scope="col">materias</th>
                        <th scope="col">periodos</th>
                        <th scope="col">
                            <center>accion</center>
                        </th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    {{#each asigna}}
                    <tr>
                        <td scope="row">{{id_asigna}}</td>
                        <td>{{docente}}</td>
                        <td>{{materia}}</td>
                        <td>{{periodo}}</td>
                        <td>

                            <a href="eliminar" class="btn btn-danger">eliminar</a>
                            <a href="" class="btn btn-info">modificar</a>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>