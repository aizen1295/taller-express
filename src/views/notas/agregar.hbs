<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>agregar notas</h4>
        </div>
        <div class="card-body">
            <form method="POST" action="agregar" class="form" role="form" autocomplete="off">
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">estudiante</label>
                    <div class="col-lg-9">
                        <select class="  form-control" name="id_estudiante">
                            <option value="0">estudiante</option>
                            {{#each estudiante}}
                            <option value="{{id_estudiante}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">docente</label>
                    <div class="col-lg-9">
                        <select class="  form-control" name="id_docente">
                            <option value="0">docente</option>
                            {{#each docente}}
                            <option value="{{id_docente}}">{{nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">materia</label>
                    <div class="col-lg-9">
                        <select class="  form-control" name="id_materia">
                            <option value="0">materia</option>
                            {{#each materia}}
                            <option value="{{id_materia}}">{{materia}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">periodo</label>
                    <div class="col-lg-9">
                        <select class="  form-control" name="id_periodo">
                            <option value="0">periodo academico</option>
                            {{#each periodo}}
                            <option value="{{id_periodo}}">{{periodo}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-lg-3 col-form-label form-control-label">nota</label>
                    <div class="col-lg-9">
                        <input class="form-control" type="text" name="nota">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-12 text-center">
                        <a class="btn btn-danger" href="listar" role="button">cancelar</a>
                        <input type="submit" class="btn btn-primary" value="agregar">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>